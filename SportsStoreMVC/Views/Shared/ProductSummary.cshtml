@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary"
                  style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">@Model.Description</div>
</div>

<form asp-page="/Cart" method="post">
    <input type="hidden" asp-for="@Model.ProductID" />
    <input type="hidden" name="myUrl" 
           value="@ViewContext.HttpContext.Request.GetPathAndQuery()" />
    <button class="btn-secondary" type="submit" >Add To Cart</button>
</form>



